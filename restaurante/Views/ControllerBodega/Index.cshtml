@model List<restaurante.Models.Bodega>

<div class="container">

    <div class="row">
       <div class="col-sm-6">
           <h3>LISTA DE PRODUCTOS</h3>
       </div>
       <div class="col-sm-6">
           <a class="btn btn-primary d-block" asp-action="Create" asp-controller="ControllerBodega" >Agregar Producto</a>
       </div>
    </div>
    

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Nombre Producto</td>
                        <td>Fecha Ingreso</td>
                        <td>Cantidad</td>
                        <td>Tipo</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model )
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Ingreso</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Tipo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> NO HAY REGISTROS</p>
        }
    </div>

</div>